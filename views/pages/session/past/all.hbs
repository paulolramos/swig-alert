<section class="space-y-6 max-w-xl my-6 mx-auto px-6 md:my-8 2xl:max-w-4xl">
    <div>
        <h1 class="text-2xl font-thin mb-1">Past Sessions</h1>
    </div>
    {{#if sessions}}
    <p class="text-sm">Click on a session to see more information.</p>
    {{#each sessions}}
    <a id="card-{{@index}}" href="/session/past/{{this.id}}" class="flex w-full bg-white shadow-md rounded">
        <div
            class="flex flex-col place-content-between bg-blue-700 py-4 px-3 w-1/4 text-white text-center rounded-tl rounded-bl md:w-1/6">
            <p class="text-xs">BAC</p>
            <p class="text-lg">{{this.bloodAlcoholContent}}%</p>
            <hr class="w-1/3 mx-auto border-gray-100 my-3">
            <p class="text-xs">Drinks</p>
            <p class="text-lg">{{this.beverages.length}}/{{this.estimatedBeverages}}</p>
        </div>
        <div class="relative pt-4 pb-4 px-6 w-full">
            <div class="flex justify-between items-end">
                <h2 class="text-2xl font-thin">{{formatDate this.sessionStart}}</h2>
            </div>
        </div>
    </a>
    {{/each}}
    {{else}}
    <p class="text-sm">No sessions found.</p>
    {{/if}}
    <a href="/profile" class="block mt-8 font-bold text-green-700">
        < Back</a>
</section>