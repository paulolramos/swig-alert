<div class="flex flex-col mt-10 mx-auto max-w-6xl h-full md:flex-row">
    <div class="mx-5 space-y-3 md:w-1/3 md:my-10 md:mr-0 md:mx-10 md:space-y-5 lg:mr-5">
        {{#if currentSession.hasActiveSession}}
        <a class="animate-pulse block bg-red-700 text-white p-4 rounded text-xl md:pb-16"
            href="/session/{{currentSession.sessionId}}">
            Current Session</a>
        {{else}}
        <a class="block bg-green-700 text-green-100 p-4 rounded text-xl md:pb-16" href="/session/new">
            Start New Session</a>
        {{/if}}
        <a class="block border-2 border-blue-700 text-blue-800 p-4 rounded text-xl hover:bg-blue-700 hover:text-blue-100 md:pb-16"
            href="/session/past/all">
            Past Sessions</a>
        <a class="block border-2 border-gray-700 text-gray-800 p-4 rounded text-xl hover:bg-gray-700 hover:text-gray-100 md:pb-16"
            href="/profile/update">
            Update Profile</a>
    </div>
    <div class="mx-5 mt-10 md:ml-5 md:w-2/3 md:my-10 md:mx-10">
        <div class="flex justify-between items-end mb-6">
            <h1 class="text-4xl font-thin text-gray-900">Profile
            </h1>
            <p class="text-right text-xs text-gray-600">Joined {{dateFromNow user.createdOn}} ago</p>
        </div>
        <section>
            <div>
                <label class="block text-sm mb-1 text-gray-600" for="username">Username</label>
                <p id="username" class="w-full text-gray-900 text-xl">{{user.username}}</p>
            </div>
        </section>
        <hr class="my-4">
        <section>
            <div class="md:flex">
                <div class="mb-5 md:mb-0 md:w-1/2">
                    <label class="block text-sm mb-1 text-gray-600" for="email">Email</label>
                    {{#if user.email}}
                    <p id="email" class="w-full text-gray-900 text-lg">{{user.email}}</p>
                    {{else}}
                    <p id="email" class="w-full text-gray-900 text-lg">-</p>
                    {{/if}}
                </div>
                <div class="md:w-1/2">
                    <label class="block text-sm mb-1 text-gray-600" for="phoneNumber">Phone Number</label>
                    {{#if user.phoneNumber}}
                    <p id="phoneNumber" class="w-full text-gray-900 text-lg">{{user.phoneNumber}}</p>
                    {{else}}
                    <p id="phoneNumber" class="w-full text-gray-900 text-lg">-</p>
                    {{/if}}
                </div>
            </div>
        </section>
        <hr class="my-4">
        <section>
            <div class="flex">
                <div class="w-1/2">
                    <label class="block text-sm mb-1 text-gray-600" for="weightInKg">Weight (lb)</label>
                    <p id="weightInKg" class="w-full text-gray-900 text-xl">{{user.weightInPounds}}</p>
                </div>
                <div class="w-1/2">
                    <label class="block text-sm mb-1 text-gray-600" for="sex">Sex</label>
                    <p id="sex" class="w-full text-gray-9sex00 text-xl lowercase">{{user.sex}}</p>
                </div>
            </div>
        </section>
        <hr class="my-4">
        <section>
            <div class="md:flex">
                <div class="mb-5 md:mb-0 md:w-1/2">
                    <label class="block text-sm mb-1 text-gray-600" for="habitType">Drink Habit</label>
                    {{#if user.habitType}}
                    <p id="habitType" class="w-full text-gray-900 text-xl lowercase">{{user.habitType}}</p>
                    {{else}}
                    <p id="habitType" class="w-full text-gray-900 text-lg">-</p>
                    {{/if}}
                </div>
                <div class="md:w-1/2">
                    <label class="block text-sm mb-1 text-gray-600" for="habitType">Approximate Drink Consumption
                        Time</label>
                    {{#if user.drinkTimeMinutes}}
                    <p id="drinkTimeMinutes" class="w-full text-gray-900 text-xl">{{user.drinkTimeMinutes}} minutes
                    </p>
                    {{else}}
                    <p id="drinkTimeMinutes" class="w-full text-gray-900 text-lg">-</p>
                    {{/if}}
                </div>
            </div>
        </section>
        <hr class="my-4">
        <div>
            <label class="block text-sm mb-1 text-gray-600" for="safeWord">Safe Word</label>
            {{#if user.safeWord}}
            <p id="safeWord" class="w-full text-gray-900 text-xl">{{user.safeWord}}</p>
            {{else}}
            <p id="safeWord" class="w-full text-gray-900 text-lg">-</p>
            {{/if}}
        </div>
        <div class="mt-24 mb-10">
            <form class="block flex justify-end" action="/auth/logout" method="GET">
                <button
                    class="block bg-white border border-green-700 rounded px-4 py-1 text-gray-900 hover:bg-green-700 hover:text-white"
                    type="submit">Logout</button>
            </form>
        </div>
    </div>
</div>