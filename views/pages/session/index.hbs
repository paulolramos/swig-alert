<div class="max-w-2xl my-12 mx-auto px-6 md:my-8 2xl:max-w-4xl">
    <div class="space-y-5">
        <div class="flex flex-col justify-between md:items-end md:flex-row">
            <h1 class="text-4xl font-thin mb-2 md:mb-0">Current Session</h1>
            <p class="long-date hidden text-sm">{{session.sessionStart}}</p>
        </div>
        <section id="expectations">
            <h2 class="text-2xl font-thin mb-3">Expectations</h2>
            <div class="space-y-1">
                <p class="">Estimated Beverages: {{session.estimatedBeverages}}</p>
                <p>Estimated Duration: {{session.estimatedDurationInHours}} hours</p>
            </div>
        </section>
        <section id="assessment">
            <h2 class="text-2xl font-thin mb-3">Assessment</h2>
            <div id="overview" class="space-y-1 mb-4">
                <p>Drinks Consumed: {{session.beverages.length}}</p>
                <p>Estimated Blood Alcohol Content: {{session.bloodAlcoholContent}}</p>

            </div>
            <div id="effects" class="space-y-4">
                {{#if effects.behaviors}}
                <div>
                    <h3 class="text-md font-bold underline">Behaviors</h3>
                    <ul>
                        {{#each effects.behaviors}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
                {{/if}}
                {{#if effects.impairments}}
                <div>
                    <h3 class="text-md font-bold underline">Impairments</h3>
                    <ul>
                        {{#each effects.impairments}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
                {{/if}}
            </div>
            {{#if hourTillSober.hours}}
            <div id="time" class="mt-5">
                <p class="font-bold">Should starting feeling sober in about a {{hourTillSober.hours}} hour.</p>
            </div>
            {{/if}}
        </section>
        <hr class="my-5">
        <section id="info">
            <div class="space-y-1 text-right text-sm">
                {{#if session.setDrinkReminder}}
                <p><strong>Reminders are turned on.</strong></p>
                {{/if}}
                <p><em>Last updated: <span class="relative-date hidden">{{session.updatedOn}}</span></em></p>
            </div>
        </section>
        <section id="controls" class="flex flex-col space-y-3 my-8 sm:flex-row sm:space-y-0 sm:space-x-4">
            <a class="block text-center w-full py-3 px-6 rounded bg-green-700 text-white"
                href="/session/{{session.id}}/beverage/new">Add Beverage</a>
            <a class="block text-center w-full py-3 px-6 rounded border-2 border-green-700"
                href="/session/{{session.id}}/beverage">All Beverages</a>
            <form class="block w-full" action="/session/{{session.id}}?_method=PUT" method="post">
                <button
                    class="text-center py-3 w-full rounded border-2 border-red-700 text-red-700 hover:bg-red-700 hover:text-white"
                    type="submit">End Session</button>
            </form>
        </section>
    </div>
    <a href="/profile" class="block mt-8 font-bold text-green-700">
        < Back</a>
</div>