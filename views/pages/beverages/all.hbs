<section class="space-y-6 max-w-xl my-6 mx-auto px-6 md:my-8 2xl:max-w-4xl">
    <div>
        <h1 class="text-2xl font-thin mb-1">Drinks</h1>
    </div>
    {{#if beverages}}
    <p class="text-sm">Click on a drink to see more information.</p>
    {{#each beverages}}
    <a id="card-{{@index}}" href="/session/{{../sessionId}}/beverage/{{this.id}}"
        class="flex w-full bg-white shadow-md rounded">
        <div
            class="flex flex-col place-content-between bg-green-700 py-4 px-3 w-1/4 text-white text-center rounded-tl rounded-bl md:w-1/6">
            <p class="text-lg">{{this.alcoholPercentage}}%</p>
            <hr class="w-1/3 mx-auto border-gray-100">
            <p class="text-sm">{{this.quantityInOz}}oz</p>
        </div>
        <div class="relative pt-4 pb-6 px-6 w-full">
            <div class="flex justify-between items-end">
                <h2 class="text-2xl font-thin mb-1">{{this.name}}</h2>
                {{#if this.isConsumed}}
                <p class="rounded px-1 py-1 text-xs text-white bg-red-700">CONSUMED</p>
                {{/if}}
            </div>
            <hr class="my-2">
            <p class="long-date hidden text-sm text-gray-700">{{this.createdOn}}</p>
        </div>
    </a>
    {{/each}}
    {{else}}
    <p class="text-sm">No drinks consumed yet.</p>
    {{/if}}
    <a href="/session/{{sessionId}}" class="block mt-8 font-bold text-green-700">
        < Back</a>
</section>