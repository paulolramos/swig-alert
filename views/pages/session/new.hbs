<form action="/session" method="POST" class="bg-gray-100 block p-5 my-16 max-w-md mx-auto space-y-5 rounded font-sans">
    <h1 class="text-3xl font-thin text-gray-900">New Session</h1>
    <div>
        <label class="block text-sm mb-1 text-gray-600" for="estimatedBeverages">How many drinks do you
            plan on having?</label>
        <input
            class="block border border-gray-200 p-2 w-full rounded shadow-md hover:border-green-600 focus:outline-none focus:ring-2 focus:ring-green-600"
            id="estimatedBeverages" type="number" name="estimatedBeverages" required value="" />
    </div>
    <div>
        <label class="block text-sm mb-1 text-gray-600" for="estimatedDurationInHours">How many hours do you plan on
            drinking?</label>
        <input
            class="block border border-gray-200 p-2 w-full rounded shadow-md hover:border-green-600 focus:outline-none focus:ring-2 focus:ring-green-600"
            id="estimatedDurationInHours" type="number" name="estimatedDurationInHours" value="" required max="10" />
    </div>
    {{#if user.phoneNumber}}
    <div>
        <input class="rounded inline-block h-4 w-4 shadow-md" id="setDrinkReminder" type="checkbox"
            name="setDrinkReminder" value="true" />
        <label class="inline-block text-sm ml-1 mb-1 text-gray-600" for="setDrinkReminder">Would you like to be
            reminded?</label>
    </div>
    {{/if}}
    <button class="block bg-green-700 text-white px-3 py-3 rounded font-bold w-full md:w-1/2 md:mx-auto md:py-2"
        type="submit">Start Session</button>
</form>